{
	"name": "api",
	"version": "0.1.0",
	"description": "Backend de nuestra aplicaci√≥n con una API en GraphQL",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"gen-env": "gen-env-types .env -o src/env.d.ts -e .",
		"build": "prisma generate && yarn clean && tsc --build && yarn copyFiles",
		"clean": "rimraf -rf ./dist",
		"start": "node ./dist/index.js",
		"copyFiles": "copyfiles src/schema.graphql public/* ./dist",
		"dev": "nodemon index.ts",
		"lint": "eslint \"src/**/*.ts\"",
		"prettier": "prettier \"src/**/*.ts\"",
		"migrate": "prisma migrate dev --name \"init\" --preview-feature",
		"test:unit": "jest --verbose ./__tests__"
	},
	"lint-staged": {
		"**/*": "yarn lint",
		"package.json": "sort-package-json"
	},
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"@prisma/client": "^4.11.0",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^6.0.0-alpha.120",
		"apollo-server-core": "^3.3.0",
		"apollo-server-express": "^3.3.0",
		"bcrypt": "^5.1.0",
		"body-parser": "^1.19.0",
		"copyfiles": "^2.4.1",
		"cors": "^2.8.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.32.2",
		"express": "^4.17.1",
		"gen-env-types": "^1.3.4",
		"graphql": "^15.6.1",
		"joi": "^17.9.2",
		"jsonwebtoken": "^9.0.0",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.13",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"prompt": "^1.2.0",
		"rimraf": "^4.4.1",
		"supertest": "^6.3.3",
		"ts-node": "^10.2.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/boom": "^7.3.2",
		"@types/jest": "^27.0.x",
		"@types/supertest": "^2.0.12",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/morgan": "^1.9.4",
		"@types/passport": "^1.0.12",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/prompt": "^1.1.1",
		"easygraphql-tester": "^6.0.1",
		"eslint": "^8.40.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"graphql-tag": "^2.12.6",
		"jest": "^29.5.0",
		"jest-mock-extended": "^2.0.4",
		"prettier": "^2.8.8",
		"prisma": "^4.11.0",
		"ts-jest": "^29.0.0-next.1",
		"typescript": "^5.0.2"
	}
}
